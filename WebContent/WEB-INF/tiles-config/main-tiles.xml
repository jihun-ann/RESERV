<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
	<!-- 기본 layout 설정 -->
   <definition name="layout" template="/WEB-INF/layout/default.jsp">
      <put-attribute name="css" value="/WEB-INF/layout/css.jsp"/>
      <put-attribute name="header" value="/WEB-INF/layout/header.jsp"/>
      <put-attribute name="menu" value="/WEB-INF/layout/menu.jsp"/>
      <put-attribute name="content" value="/WEB-INF/layout/content.jsp"/>
   </definition>
   
   <!-- content -->
   <definition name="*.e" template="/WEB-INF/errors/error.jsp">
   </definition>
   
   <definition name="*.t" extends="layout">
     <put-attribute name="content" value="/WEB-INF/views/{1}.jsp"></put-attribute>
   </definition>

   <definition name="*/*.t" extends="layout">
     <put-attribute name="content" value="/WEB-INF/views/{1}/{2}.jsp"></put-attribute>
   </definition>

   <definition name="*/*/*.t" extends="layout">
     <put-attribute name="content" value="/WEB-INF/views/{1}/{2}/{3}.jsp"></put-attribute>
   </definition>
   
</tiles-definitions>